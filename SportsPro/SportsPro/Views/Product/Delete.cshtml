@model Product
@{
	ViewBag.Title = "Delete Product";
}
<h2 class="mb-3">Delete Product</h2>
<form asp-action="Delete">
	<input type="hidden" asp-for="ProductID" />
	<input type="hidden" asp-for="Name" />
	<p>Are you sure you want to delete: <br/> <strong>@Model.Name <br/> Code: @Model.ProductCode</strong></p>
	<button type="submit" class="btn btn-danger">Yes</button>
	<a asp-action="List" class="btn btn-secondary">No</a>
</form>