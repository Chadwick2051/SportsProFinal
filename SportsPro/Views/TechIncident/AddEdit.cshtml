@model TechnicianIncidentViewModel

@{
	ViewBag.Title = "Edit Incident";
}
@section scripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h1>@ViewBag.Title</h1>

<form asp-action="Edit" method="post">
	<div class="row mb-1">
		<label class="col-form-label col-md-3">Technician: </label>
		<div class="col"><label>@Model.Technician.Name</label></div>
	</div>
	<div class="row mb-1">
		<label class="col-form-label col-md-3">Customer: </label>
		<label>@Model.Incident.Customer.FullName</label>
	</div>
	<div class="row mb-1">
		<label class="col-form-label col-md-3">Product: </label>
		<div class="col"><label>@Model.Incident.Product.Name</label></div>
	</div>
	<div class="row mb-1">
		<label class="col-form-label col-md-3">Title: </label>
		<div class="col"><label>@Model.Incident.Title</label></div>
	</div>
	<div class="row mb-1">
		<label class="col-form-label col-md-3">DateOpened: </label>
		<div class="col"><label>@Model.Incident.DateOpened.ToShortDateString()</label></div>
	</div>
	<div class="row mb-1">
		<label class="col-form-label col-md-3" asp-for="Incident.Description">Description: </label>
		<textarea asp-for="Incident.Description" class="form-control">@Model.Incident.Description</textarea>
	</div>
	<div class="row mb-1">
		<label class="col-form-label col-md-3">DateClosed: </label>
		<div class="col"><input asp-for="Incident.DateClosed" class="form-control" /></div>
	</div>

	<input type="hidden" asp-for="Incident.IncidentID" />

	<div class="row">
		<div class="col">
			<button type="submit" class="btn btn-primary">Save</button>
			<a asp-action="List" asp-route-id="@Model.Technician.TechnicianID" class="btn btn-secondary">Cancel</a>
		</div>
	</div>
	
</form>